# QuoteSnap Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_DEBUG=true

# CORS Configuration (comma-separated list of allowed origins)
# For local development
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# For production, add your frontend domain:
# CORS_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# Frontend URL (where to redirect after OAuth)
FRONTEND_URL=http://localhost:5173
# For production:
# FRONTEND_URL=https://your-frontend-domain.com

# OAuth Redirect URI
# IMPORTANT: This must match the redirect URI configured in Google Cloud Console
# For local development:
OAUTH_REDIRECT_URI=http://localhost:5000/api/auth/callback
# For production:
# OAUTH_REDIRECT_URI=https://your-backend-domain.com/api/auth/callback

# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_DIRECTORY=tokens

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Database Configuration
DATABASE_URL=sqlite:///database/quotesnap.db

# Email Monitoring Configuration
EMAIL_CHECK_INTERVAL=60
MAX_EMAILS_PER_CHECK=50

# File Storage Configuration
UPLOAD_FOLDER=uploads
EXCEL_TEMPLATE_PATH=templates/quotation_template.xlsx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log